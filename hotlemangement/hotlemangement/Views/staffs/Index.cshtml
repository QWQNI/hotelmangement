@model IEnumerable<hotlemangement.Models.staff>

@{
    ViewBag.Title = "Index";
}

<h2>员工管理</h2>

<p><a href="/staffs/Create" class="btn btn-primary">添加 &raquo;</a></p>
<table class="table">
    <tr>
        <th>
           姓名
        </th>
        <th>
         员工号
        </th>
        <th>
      所属部门
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.num)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.compartment)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.ID }) |
            @Html.ActionLink("详情", "Details", new { id=item.ID }) |
            @Html.ActionLink("删除", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
